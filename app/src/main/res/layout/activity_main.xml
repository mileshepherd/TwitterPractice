<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.angus.tweet.MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/obsolete" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_key"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/t_icon" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_ok"
        android:src="@drawable/shy"
        android:visibility="visible"
        android:layout_alignBottom="@+id/t_icon"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tweet_header"
        android:layout_below="@+id/search_key"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet_list"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tweet_header" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/t_icon"
        android:layout_alignBottom="@+id/search_key"
        android:layout_toEndOf="@+id/tweet_header"
        android:src="@drawable/twitter_t_logo"
        android:visibility="visible" />

</RelativeLayout>
